<resources>
    <!-- Base application theme. -->
    <style name="Theme.MobileProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/good_white</item>
        <item name="colorPrimaryVariant">@color/good_white_transparent</item>
        <item name="colorOnPrimary">@color/good_gray_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/good_white_light</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/white</item>
        <!-- Accent brand color. -->
        <item name="colorAccent">@color/teal</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?colorPrimary</item>
        <item name="android:alertDialogTheme">@color/red_arms</item>
        <item name="autoCompleteTextViewStyle">?colorOnPrimary</item>
        <item name="android:textCursorDrawable">@color/white</item>
    </style>
</resources>