<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobileProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_ocean</item>
        <item name="colorPrimaryVariant">@color/dark_night</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/clean_sky_1</item>
        <item name="colorSecondaryVariant">@color/clean_sky_2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>