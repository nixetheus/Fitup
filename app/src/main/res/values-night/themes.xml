<resources>
    <!-- Base application theme. -->
    <style name="Theme.MobileProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/good_gray</item>
        <item name="colorPrimaryVariant">@color/good_gray_transparent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/good_gray_light</item>
        <item name="colorSecondaryVariant">@color/clean_sky_2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?colorPrimary</item>
        <item name="android:alertDialogTheme">@color/red_arms</item>
    </style>
</resources>