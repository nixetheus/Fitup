<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7.5dp"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView

            android:id="@+id/workoutExercisesCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp">

            <LinearLayout
                android:id="@+id/workoutExercisesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?colorAccent"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/exerciseInWorkoutLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:foregroundGravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="12.5dp"
                    android:paddingEnd="12.5dp"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/exerciseNameWorkout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="19sp"
                        android:autoSizeTextType="uniform"
                        android:breakStrategy="simple"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center|center_vertical"
                        android:letterSpacing="0.025"
                        android:paddingStart="10dp"
                        android:paddingEnd="20dp"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="?colorOnSecondary"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/workoutExercisesDataLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/exerciseDataUpperLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1.5"
                                android:orientation="vertical"
                                android:textAlignment="center">

                                <TextView
                                    android:id="@+id/setsValue"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="@string/missing"
                                    android:textAlignment="center"
                                    android:textColor="?colorOnSecondary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="@string/sets_label"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textColor="?colorOnSecondary"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1.5"
                                android:orientation="vertical"
                                android:textAlignment="center">

                                <TextView
                                    android:id="@+id/repsValue"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="@string/missing"
                                    android:textAlignment="center"
                                    android:textColor="?colorOnSecondary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="@string/reps_label"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textColor="?colorOnSecondary"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.35"
                                android:orientation="vertical"
                                android:textAlignment="center">

                                <TextView
                                    android:id="@+id/restValue"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="@string/missing"
                                    android:textAlignment="center"
                                    android:textColor="?colorOnSecondary"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/textView12"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="@string/rest_label"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textColor="?colorOnSecondary"
                                    android:textSize="11sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/exerciseDataLowerLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:textAlignment="center">

                                <TextView
                                    android:id="@+id/weightValue"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:fontFamily="@font/lato_bold"
                                    android:maxLength="5"
                                    android:text="@string/missing"
                                    android:textAlignment="center"
                                    android:textColor="?colorOnSecondary"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/weightLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="@string/weight_label"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textColor="?colorOnSecondary"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:textAlignment="center">

                                <TextView
                                    android:id="@+id/bufferValue"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="@string/missing"
                                    android:textAlignment="center"
                                    android:textColor="?colorOnSecondary"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/bufferLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lato_bold"
                                    android:text="@string/buffer_label"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textColor="?colorOnSecondary"
                                    android:textSize="11sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>