<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_1"
    tools:context=".CentralActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/userLayout"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_marginStart="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/gradient_0" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:fontFamily="@font/lato"
                        android:text="Good morning, \nUsername"
                        android:textColor="?colorOnPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/signoutbtn"
                        android:layout_width="87dp"
                        android:layout_height="43dp"
                        android:layout_marginStart="83dp"
                        android:layout_marginTop="26dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="31dp"
                        android:text="Sign Out"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView4"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbarSize="0dp"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:id="@+id/workoutsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="500dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView" />
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/statsLayout"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:paddingStart="30dp"
                android:paddingTop="25dp"
                android:paddingEnd="30dp"
                android:paddingBottom="25dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/armsStat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="7.5dp"
                    android:layout_marginEnd="7.5dp"
                    android:layout_weight="0.25"
                    app:cardBackgroundColor="@color/red_arms"
                    app:cardCornerRadius="5dp">

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/coreStat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="7.5dp"
                    android:layout_marginEnd="7.5dp"
                    android:layout_weight="0.25"
                    app:cardBackgroundColor="@color/yellow_core"
                    app:cardCornerRadius="5dp">

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/legsStat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="7.5dp"
                    android:layout_marginEnd="7.5dp"
                    android:layout_weight="0.25"
                    app:cardBackgroundColor="@color/blue_legs"
                    app:cardCornerRadius="5dp">

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/spiritStat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="7.5dp"
                    android:layout_marginEnd="7.5dp"
                    android:layout_weight="0.25"
                    app:cardBackgroundColor="@color/green_spirit"
                    app:cardCornerRadius="5dp">

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linksLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="40dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:id="@+id/statsLink"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@drawable/gradient_2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="12.5dp"
                    android:paddingEnd="0dp">

                    <ImageView
                        android:id="@+id/statsLinkImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/none"
                        tools:srcCompat="@drawable/gradient_0" />

                    <TextView
                        android:id="@+id/statsLinkText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/lato"
                        android:gravity="center_vertical"
                        android:paddingStart="25dp"
                        android:paddingEnd="0dp"
                        android:text="@string/stats_link"
                        android:textColor="?colorOnPrimary"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/exercisesLink"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/gradient_2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="12.5dp"
                    android:paddingEnd="0dp">

                    <ImageView
                        android:id="@+id/exercisesLinkImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/none"
                        tools:srcCompat="@drawable/gradient_0" />

                    <TextView
                        android:id="@+id/exercisesLinkText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/lato"
                        android:gravity="center_vertical"
                        android:paddingStart="25dp"
                        android:paddingEnd="0dp"
                        android:text="@string/exercises_link"
                        android:textColor="?colorOnPrimary"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/workoutsLink"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/gradient_2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="12.5dp"
                    android:paddingEnd="0dp">

                    <ImageView
                        android:id="@+id/workoutsLinkImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/none"
                        tools:srcCompat="@drawable/gradient_0" />

                    <TextView
                        android:id="@+id/workoutLinkText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/lato"
                        android:gravity="center_vertical"
                        android:paddingStart="25dp"
                        android:paddingEnd="0dp"
                        android:text="@string/workouts_link"
                        android:textColor="?colorOnPrimary"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>